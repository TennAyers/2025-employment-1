@{
    ViewData["Title"] = "SYSTEM LOGIN";
    Layout = null; // デザインを独自にするためレイアウトは無効化
}

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #000;
            color: #0f0;
            font-family: 'Courier New', Courier, monospace;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            overflow: hidden;
        }
        .ar-container {
            border: 2px solid #0f0;
            padding: 40px;
            width: 350px;
            box-shadow: 0 0 20px rgba(0, 255, 0, 0.5);
            background: rgba(0, 20, 0, 0.8);
            position: relative;
        }
        .ar-container::before, .ar-container::after {
            content: '';
            position: absolute;
            width: 20px;
            height: 20px;
            border-color: #0f0;
            border-style: solid;
        }
        /* 四隅の装飾 */
        .ar-container::before { top: -2px; left: -2px; border-width: 2px 0 0 2px; }
        .ar-container::after { bottom: -2px; right: -2px; border-width: 0 2px 2px 0; }

        h2 { text-align: center; letter-spacing: 5px; border-bottom: 1px dashed #0f0; padding-bottom: 10px; margin-bottom: 30px; }
        
        .form-group { margin-bottom: 20px; }
        label { display: block; font-size: 0.8em; margin-bottom: 5px; opacity: 0.8; }
        
        input {
            width: 100%;
            background: transparent;
            border: 1px solid #0f0;
            color: #fff;
            padding: 10px;
            box-sizing: border-box;
            outline: none;
            transition: 0.3s;
        }
        input:focus { box-shadow: 0 0 10px #0f0 inset; background: rgba(0, 255, 0, 0.1); }

        button {
            width: 100%;
            background: #0f0;
            color: #000;
            border: none;
            padding: 15px;
            font-weight: bold;
            cursor: pointer;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-top: 20px;
        }
        button:hover { background: #fff; box-shadow: 0 0 15px #fff; }

        .link-text { text-align: center; margin-top: 20px; font-size: 0.8em; }
        .link-text a { color: #0f0; text-decoration: none; border-bottom: 1px solid #0f0; }

        /* エラーメッセージ用のスタイル追加 */
        .alert-error {
            color: #ff3333;
            border: 1px solid #ff3333;
            padding: 10px;
            margin-bottom: 20px;
            text-align: center;
            background: rgba(50, 0, 0, 0.5);
        }
    </style>
</head>
<body>

    <div class="ar-container">
        <h2>LOGIN SYSTEM</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert-error">
                WARNING: @ViewBag.Error
            </div>
        }

        <form action="/Account/Login" method="post">
            <div class="form-group">
                <label>IDENTIFIER (EMAIL)</label>
                <input type="email" name="email" required placeholder="user@example.com" />
            </div>
            <div class="form-group">
                <label>ACCESS KEY (PASSWORD)</label>
                <input type="password" name="password" required placeholder="********" />
            </div>
            <button type="submit">INITIALIZE</button>
        </form>

        <div class="link-text">
            <a href="/Account/Register">Create New Identity</a>
        </div>
    </div>

</body>
</html>